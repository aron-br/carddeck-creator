<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="C:\Users\aronr\Documents\test\static\styles\styles.css">
</head>
<body>
    <!-- Front of Cards -->
    <page size="A4">
        <div class="cardGrid">
            {% for card in cards %}
                <div class="cardCell">
                    <input type="text" class="textField" placeholder="Text Field 1" value="{{ card.text1 }}">
                    <input type="text" class="textField" placeholder="Text Field 2" value="{{ card.text2 }}">
                    <input type="text" class="textField" placeholder="Text Field 3" value="{{ card.text3 }}">
                    <input type="text" class="smallTextField" placeholder="Small Text" value="{{ card.smallText }}">
                </div>
            {% endfor %}
        </div>
    </page>

    <!-- Back of Cards -->
    <page size="A4">
    <div class="cardGrid">
        {% for card in cards %}
            <div class="cardCell back">
                <img src="{{ card.backImage }}" alt="Card Back" class="cardBackImage">
            </div>
        {% endfor %}
    </div>
</page>
</body>
</html>
